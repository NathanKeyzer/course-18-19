  "keywords": [],
  "repository": "cmda-tt/course-18-19",
  "bugs": "https://github.com/cmda-tt/course-18-19/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.2.2",
    "cssnano": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-image-inliner": "^2.0.0",
    "postcss-preset-env": "^6.0.0",
    "prettier": "^1.14.3",
    "rehype-cli": "^6.0.0",
    "rehype-preset-minify": "^2.1.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "tinyify": "^2.4.3",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix && stylelint src/index.css --fix",
    "build:asset": "cp -r src/* dest",
    "build:js": "browserify -p tinyify src -o dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -qfo -u preset-minify -u prevent-favicon-request src -o dest",
    "build": "npm run build:asset && npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "object-shorthand": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-image-inliner": {
        "assetPaths": "src"
      },
      "postcss-preset-env": {},
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
